<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity_insertarPalabra">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insertar Palabra"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="25dp">
            </TextView>

            <Button
                android:id="@+id/btn_salir"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/ic_home_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese la palabra:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/etpalabra"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="105dp"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold"
                android:hint="Palabra"
                android:textAlignment="center"
                android:background="@drawable/custom_input">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese la pregunta:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="30dp"/>

            <Button
                android:id="@+id/boton_grabar"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/lightblue"
                android:textColor="#ffffff"
                android:textSize="11dp"
                android:textStyle="bold"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="199dp"
                android:layout_marginTop="200dp"
                android:text="Grabar"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="49dp" />

            <Button
                android:id="@+id/boton_detenerg"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="300dp"
                android:background="@drawable/lightblue"
                android:textColor="#ffffff"
                android:textSize="11dp"
                android:textStyle="bold"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="200dp"
                android:text="Detener Grabacion"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="49dp" />

            <Button
                android:id="@+id/boton_reproducir"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="199dp"
                android:background="@drawable/lightblue"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="#ffffff"
                android:layout_marginTop="245dp"
                android:text="Reproducir"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="49dp" />

            <Button
                android:id="@+id/boton_detenerr"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="300dp"
                android:layout_marginLeft="384dp"
                android:textStyle="bold"
                android:background="@drawable/lightblue"
                android:textSize="11dp"
                android:textColor="#ffffff"
                android:layout_marginTop="245dp"
                android:text="Detener Reproduccion"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="49dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese imagen para la palabra:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="30dp"/>


            <Button
                android:id="@+id/bseleccionarimagen"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/lightblue"
                android:text="Seleccionar imagen"
                android:textColor="#ffffff"
                android:textSize="11dp"
                android:textStyle="bold">

            </Button>

            <ImageView
                android:id="@+id/Vimagen"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="430dp"
                android:background="#3d3f41">

            </ImageView>


            <Button
                android:id="@+id/binsertar"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="600dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/green"
                android:textColor="#ffffff"
                android:text="Guardar"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textStyle="bold">

            </Button>

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>