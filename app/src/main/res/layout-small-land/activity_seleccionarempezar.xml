<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradadohor"
    android:orientation="horizontal"
    tools:context=".Lista_palabras">

    <TextView
        android:id="@+id/prueba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione las palabras que desee"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal">

    </TextView>
    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true">

    </ListView>

    <Button
        android:id="@+id/bcomenzar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/lightblue"
        android:text="Comenzar"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@+id/lv1"/>

    <TextView
        android:id="@+id/tiempo_muestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="53dp"
        android:text="00:00"
        android:textSize="30dp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/texto_editar"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:background="@drawable/custom_input"
        android:hint="00:00"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_below="@+id/lv1"/>

    <TextView
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="126dp"
        android:text="Ingresar los segundos que habra entre cada palabra"
        android:layout_below="@+id/lv1"/>

    <Button
        android:id="@+id/set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:layout_marginBottom="17dp"
        android:text="Establecer"
        android:visibility="invisible"/>


</RelativeLayout>