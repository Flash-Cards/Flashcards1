<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity_insertarPalabra">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INSERTAR PALABRA"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="25dp">

            </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ingrese la palabra:"
               android:textColor="#000000"
               android:textStyle="bold"
               android:textSize="18sp"
               android:layout_marginTop="90dp"
               android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/etpalabra"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese la pregunta:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="30dp"/>

            <Button
                android:id="@+id/boton_grabar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginStart="199dp"
                android:layout_marginLeft="199dp"
                android:layout_marginTop="210dp"
                android:text="Grabar"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="49dp" />

            <Button
                android:id="@+id/boton_detenerg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="400dp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="210dp"
                android:text="Detener Grabacion"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="49dp" />

            <Button
                android:id="@+id/boton_reproducir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="196dp"
                android:layout_marginLeft="196dp"
                android:background="#000000"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="270dp"
                android:text="Reproducir"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="49dp" />

            <Button
                android:id="@+id/boton_detenerr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="384dp"
                android:layout_marginLeft="384dp"
                android:textStyle="bold"
                android:background="#000000"
                android:textColor="#ffffff"
                android:layout_marginTop="270dp"
                android:text="Detener Reproduccion"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="49dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese imagen para la palabra:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="30dp"/>


            <Button
                android:id="@+id/bseleccionarimagen"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:text="Seleccionar imagen"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:background="#000000"
                android:textSize="15dp"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="190dp">

            </Button>

            <ImageView
                android:id="@+id/Vimagen"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="450dp"
                android:background="#3d3f41">

            </ImageView>


            <Button
                android:id="@+id/binsertar"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="640dp"
                android:layout_marginBottom="50dp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:text="Guardar"
                android:textSize="25dp"
                android:textStyle="bold">

            </Button>

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>